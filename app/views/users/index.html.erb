<h1>Listing users</h1>
<%= form_tag users_path, :method => 'get', :id => "users_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= sortable user.firstname %></td>
        <td><%= sortable user.lastname %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-primary" %>
        <%= link_to 'Edit', edit_user_path(user),:class => "btn btn-success"  %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td>
      </tr>
    <% end %>
    <tr class="pagination-row">
          <td colspan="7"><div class="will-paginate"><%= will_paginate @users %></div></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>